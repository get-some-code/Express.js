<%- include('partials/head') %>
</head>

<body class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-100 text-gray-800 antialiased flex flex-col">

  <!-- HEADER -->
  <%- include('partials/nav') %>

  <!-- MAIN -->
  <main class="flex flex-1 items-center justify-center px-6">
    <section
      class="w-full max-w-md rounded-2xl bg-white px-10 py-14 text-center shadow-lg ring-1 ring-gray-200">

      <!-- Status -->
      <p class="mb-3 text-sm font-semibold uppercase tracking-widest text-gray-400">
        404 error
      </p>

      <!-- Headline -->
      <h1 class="mb-4 text-3xl font-semibold tracking-tight text-gray-900">
        Page not found
      </h1>

      <!-- Description -->
      <p class="mb-10 text-base leading-relaxed text-gray-600">
        Sorry, the page you’re looking for doesn’t exist, may have been removed,
        or is temporarily unavailable.
      </p>

      <!-- CTA -->
      <a
        href="/"
        class="inline-flex items-center justify-center rounded-full bg-linear-to-r from-red-500 to-pink-500 px-8 py-3 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:shadow-lg hover:scale-105 active:scale-95 focus:outline-none focus:ring-4 focus:ring-red-300"
      >
        Back to home
      </a>

    </section>
  </main>

</body>
</html>