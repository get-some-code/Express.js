<!-- eslint-disable -->

<%- include('../partials/head') %>
  </head>

  <body class="min-h-screen bg-linear-to-r from-gray-50 via-white to-gray-100 text-gray-800 antialiased">

    <!-- HEADER -->
    <%- include('../partials/nav') %>

      <% registeredProperty.forEach(property=> { %>
        <!-- MAIN -->
        <main class="w-full py-12">
          <div class="max-w-7xl mx-auto px-6">
            <div class="grid lg:grid-cols-3 gap-12">

              <!-- Left Column - Property Details -->
              <div class="lg:col-span-2 space-y-8">

                <!-- Header -->
                <div class="animate-slide-in">
                  <a href="/"
                    class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-900 mb-6 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    Back to properties
                  </a>
                  <h1 class="text-5xl font-bold text-gray-900 mb-3">Complete Your <span
                      class="text-red-500">Booking</span></h1>
                  <p class="text-lg text-gray-600">You're just a few steps away from your dream vacation</p>
                </div>

                <!-- Property Summary Card -->
                <div class="bg-white rounded-3xl border border-gray-200 p-6 shadow-sm animate-slide-in delay-100">
                  <div class="flex gap-6">
                    <div class="shrink-0">
                      <img src="/uploads/<%= property.propertyPhoto %>" alt="<%= property.propertyName %>"
                        class="w-32 h-32 rounded-2xl object-cover">
                    </div>
                    <div class="flex-1">
                      <h2 class="text-2xl font-semibold text-gray-900 mb-2">
                        <%= property.propertyName %>
                      </h2>
                      <p class="text-gray-600 mb-3">
                        <%= property.propertyLocation %>
                      </p>
                      <div class="flex items-center gap-4 text-sm text-gray-500">
                        <span class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path
                              d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                          </svg>
                          Entire property
                        </span>
                        <span class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                          </svg>
                          Hosted on Airbnb
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Booking Form -->
                <form action="/booking/review" method="POST" class="space-y-6 animate-slide-in delay-200">

                  <!-- Trip Dates Section -->
                  <div class="bg-white rounded-3xl border border-gray-200 p-8 shadow-sm">
                    <h3 class="text-2xl font-semibold text-gray-900 mb-6">Your Trip</h3>

                    <div class="grid md:grid-cols-2 gap-6">
                      <!-- Check-in -->
                      <div>
                        <label for="checkin" class="block text-sm font-medium text-gray-700 mb-2">Check-in</label>
                        <input type="date" id="checkin" name="checkin"
                          class="w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all"
                          required>
                      </div>

                      <!-- Check-out -->
                      <div>
                        <label for="checkout" class="block text-sm font-medium text-gray-700 mb-2">Check-out</label>
                        <input type="date" id="checkout" name="checkout"
                          class="w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all"
                          required>
                      </div>
                    </div>

                    <!-- Guests Counter -->
                    <div class="mt-6">
                      <label class="block text-sm font-medium text-gray-700 mb-3">Guests</label>

                      <div class="flex items-center justify-between p-4 border border-gray-300 rounded-xl">
                        <div>
                          <p class="font-medium text-gray-900">Adults</p>
                          <p class="text-sm text-gray-500">Ages 13 or above</p>
                        </div>
                        <div class="flex items-center gap-4">
                          <button type="button" onclick="decrementGuests('adults')"
                            class="w-10 h-10 rounded-full border-2 border-gray-300 hover:border-gray-900 transition-colors flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                            </svg>
                          </button>
                          <span id="adults-count" class="w-8 text-center font-semibold">2</span>
                          <input type="hidden" name="adults" id="adults-input" value="2">
                          <button type="button" onclick="incrementGuests('adults')"
                            class="w-10 h-10 rounded-full border-2 border-gray-300 hover:border-gray-900 transition-colors flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4v16m8-8H4" />
                            </svg>
                          </button>
                        </div>
                      </div>

                      <div class="flex items-center justify-between p-4 border border-gray-300 rounded-xl mt-3">
                        <div>
                          <p class="font-medium text-gray-900">Children</p>
                          <p class="text-sm text-gray-500">Ages 2-12</p>
                        </div>
                        <div class="flex items-center gap-4">
                          <button type="button" onclick="decrementGuests('children')"
                            class="w-10 h-10 rounded-full border-2 border-gray-300 hover:border-gray-900 transition-colors flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                            </svg>
                          </button>
                          <span id="children-count" class="w-8 text-center font-semibold">0</span>
                          <input type="hidden" name="children" id="children-input" value="0">
                          <button type="button" onclick="incrementGuests('children')"
                            class="w-10 h-10 rounded-full border-2 border-gray-300 hover:border-gray-900 transition-colors flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4v16m8-8H4" />
                            </svg>
                          </button>
                        </div>
                      </div>

                      <div class="flex items-center justify-between p-4 border border-gray-300 rounded-xl mt-3">
                        <div>
                          <p class="font-medium text-gray-900">Infants</p>
                          <p class="text-sm text-gray-500">Under 2</p>
                        </div>
                        <div class="flex items-center gap-4">
                          <button type="button" onclick="decrementGuests('infants')"
                            class="w-10 h-10 rounded-full border-2 border-gray-300 hover:border-gray-900 transition-colors flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                            </svg>
                          </button>
                          <span id="infants-count" class="w-8 text-center font-semibold">0</span>
                          <input type="hidden" name="infants" id="infants-input" value="0">
                          <button type="button" onclick="incrementGuests('infants')"
                            class="w-10 h-10 rounded-full border-2 border-gray-300 hover:border-gray-900 transition-colors flex items-center justify-center">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4v16m8-8H4" />
                            </svg>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Guest Information Section -->
                  <div class="bg-white rounded-3xl border border-gray-200 p-8 shadow-sm">
                    <h3 class="text-2xl font-semibold text-gray-900 mb-6">Guest Information</h3>

                    <div class="space-y-4">
                      <div class="grid md:grid-cols-2 gap-4">
                        <div>
                          <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                          <input type="text" id="firstName" name="firstName" placeholder="John"
                            class="w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all"
                            required>
                        </div>
                        <div>
                          <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                          <input type="text" id="lastName" name="lastName" placeholder="Doe"
                            class="w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all"
                            required>
                        </div>
                      </div>

                      <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                        <input type="email" id="email" name="email" placeholder="john.doe@example.com"
                          class="w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all"
                          required>
                      </div>

                      <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                        <input type="tel" id="phone" name="phone" placeholder="+91 98765 43210"
                          class="w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all"
                          required>
                      </div>

                      <div>
                        <label for="specialRequests" class="block text-sm font-medium text-gray-700 mb-2">Special
                          Requests (Optional)</label>
                        <textarea id="specialRequests" name="specialRequests" rows="4"
                          placeholder="Let the host know if you have any special requirements..."
                          class="w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all resize-none"></textarea>
                      </div>
                    </div>
                  </div>

                  <!-- Terms & Conditions -->
                  <div class="bg-white rounded-3xl border border-gray-200 p-8 shadow-sm">
                    <div class="space-y-4">
                      <label class="flex items-start gap-3 cursor-pointer group">
                        <input type="checkbox" name="agreeTerms"
                          class="custom-checkbox w-5 h-5 mt-0.5 rounded border-gray-300 text-red-500 focus:ring-2 focus:ring-red-500"
                          required>
                        <span class="text-sm text-gray-600 group-hover:text-gray-900 transition-colors">
                          I agree to the <a href="#" class="text-red-500 underline">cancellation policy</a> and <a
                            href="#" class="text-red-500 underline">ground rules for guests</a>.
                        </span>
                      </label>

                      <label class="flex items-start gap-3 cursor-pointer group">
                        <input type="checkbox" name="newsletter"
                          class="custom-checkbox w-5 h-5 mt-0.5 rounded border-gray-300 text-red-500 focus:ring-2 focus:ring-red-500">
                        <span class="text-sm text-gray-600 group-hover:text-gray-900 transition-colors">
                          Send me exclusive deals and promotional offers via email
                        </span>
                      </label>
                    </div>
                  </div>

                  <!-- Hidden property ID -->
                  <input type="hidden" name="propertyId" value="<%= property._id %>">

                  <!-- Proceed to Payment Button -->
                  <div class="bg-white rounded-3xl border border-gray-200 p-8 shadow-sm">
                    <div class="text-center space-y-4">
                      <div class="flex items-center justify-center gap-3 mb-4">
                        <div class="h-px bg-gray-200 flex-1"></div>
                        <span class="text-sm font-medium text-gray-500">Review & Continue</span>
                        <div class="h-px bg-gray-200 flex-1"></div>
                      </div>

                      <button type="submit"
                        class="w-full bg-linear-to-r from-red-500 to-pink-500 text-white font-bold py-5 px-8 rounded-2xl hover:shadow-2xl hover:scale-105 active:scale-95 transition-all duration-300 flex items-center justify-center gap-3 group">
                        <span class="text-lg">Proceed to Payment</span>
                        <svg class="w-6 h-6 group-hover:translate-x-1 transition-transform" fill="none"
                          stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                      </button>

                      <p class="text-xs text-gray-500 flex items-center justify-center gap-2">
                        <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd"
                            d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                            clip-rule="evenodd" />
                        </svg>
                        Your information is secure and encrypted
                      </p>
                    </div>
                  </div>
                </form>
              </div>

              <!-- Right Column - Price Summary (Sticky) -->
              <div class="lg:col-span-1">
                <div class="sticky top-24 animate-slide-in delay-300">
                  <!-- Price Card -->
                  <div class="bg-white rounded-3xl border border-gray-200 p-8 shadow-lg">
                    <h3 class="text-2xl font-semibold text-gray-900 mb-6">Price Summary</h3>

                    <!-- Price Breakdown -->
                    <div class="space-y-4 mb-6 pb-6 border-b border-gray-200">
                      <div class="flex justify-between items-center">
                        <span class="text-gray-600">₹<%= property.pricePerNight %> × <span id="nights-display">1</span>
                            night<span id="nights-plural"></span></span>
                        <span class="font-medium text-gray-900" id="base-price">₹<%= property.pricePerNight %></span>
                      </div>
                      <div class="flex justify-between items-center">
                        <span class="text-gray-600">Service fee</span>
                        <span class="font-medium text-gray-900" id="service-fee">₹0</span>
                      </div>
                      <div class="flex justify-between items-center">
                        <span class="text-gray-600">Cleaning fee</span>
                        <span class="font-medium text-gray-900">₹500</span>
                      </div>
                      <div class="flex justify-between items-center">
                        <span class="text-gray-600">Taxes (12%)</span>
                        <span class="font-medium text-gray-900" id="taxes">₹0</span>
                      </div>
                    </div>

                    <!-- Total -->
                    <div class="flex justify-between items-center mb-6">
                      <span class="text-lg font-semibold text-gray-900">Total (INR)</span>
                      <span class="text-3xl font-bold text-red-500" id="total-price">₹<%= property.pricePerNight %>
                      </span>
                    </div>

                    <!-- Info Notice -->
                    <div class="bg-red-50 border border-red-100 rounded-2xl p-4 mb-6">
                      <div class="flex gap-3">
                        <svg class="w-5 h-5 text-red-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd"
                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                            clip-rule="evenodd" />
                        </svg>
                        <p class="text-sm text-red-700">
                          You won't be charged until you complete payment on the next page
                        </p>
                      </div>
                    </div>

                    <!-- Security Badge -->
                    <div class="pt-6 border-t border-gray-200">
                      <div class="flex items-center gap-3 text-sm text-gray-600">
                        <svg class="w-5 h-5 text-green-600 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd"
                            d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd" />
                        </svg>
                        <span>Secure booking process</span>
                      </div>
                    </div>

                    <!-- Cancellation Policy -->
                    <div class="mt-6 p-4 bg-gray-50 rounded-2xl">
                      <h4 class="font-semibold text-gray-900 mb-2 text-sm">Free cancellation</h4>
                      <p class="text-xs text-gray-600">Cancel before check-in for a full refund. After that, the
                        cancellation policy applies.</p>
                    </div>
                  </div>

                  <!-- Trust Signals -->
                  <div class="mt-6 bg-white rounded-3xl border border-gray-200 p-6 shadow-sm">
                    <h4 class="font-semibold text-gray-900 mb-4">Why book with us?</h4>
                    <div class="space-y-3">
                      <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-green-600 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd" />
                        </svg>
                        <div>
                          <p class="text-sm font-medium text-gray-900">Best Price Guarantee</p>
                          <p class="text-xs text-gray-600">Find it cheaper? We'll match it</p>
                        </div>
                      </div>
                      <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-green-600 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd" />
                        </svg>
                        <div>
                          <p class="text-sm font-medium text-gray-900">24/7 Customer Support</p>
                          <p class="text-xs text-gray-600">We're here whenever you need us</p>
                        </div>
                      </div>
                      <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-green-600 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd" />
                        </svg>
                        <div>
                          <p class="text-sm font-medium text-gray-900">Verified Properties</p>
                          <p class="text-xs text-gray-600">All listings are verified and safe</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </main>

        <!-- FOOTER -->
        <%- include('../partials/footer') %>

          <% }) %>

            <!-- Styling and JavaScript -->
            <style>
              /* Smooth scroll */
              html {
                scroll-behavior: smooth;
              }

              /* Slide in animation */
              @keyframes slideIn {
                from {
                  opacity: 0;
                  transform: translateY(30px);
                }

                to {
                  opacity: 1;
                  transform: translateY(0);
                }
              }

              .animate-slide-in {
                animation: slideIn 0.6s ease-out forwards;
              }

              /* Stagger delays */
              .delay-100 {
                animation-delay: 0.1s;
              }

              .delay-200 {
                animation-delay: 0.2s;
              }

              .delay-300 {
                animation-delay: 0.3s;
              }

              /* Custom checkbox */
              .custom-checkbox:checked {
                background-color: #ef4444;
                border-color: #ef4444;
              }

              /* Smooth transitions */
              button {
                -webkit-tap-highlight-color: transparent;
              }
            </style>

            <% let propertyPrice=0; 
            registeredProperty.forEach(property => {
              propertyPrice = property.pricePerNight;
              });
            %>

              <script>
                // Set the rate before loading external script
                window.ratePerNight = <%= propertyPrice %>;
              </script>

              <!-- Load external script -->
              <script src="/js/booking.js"></script>

  </body>
  </html>