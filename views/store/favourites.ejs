    <style>
      /* Smooth Animations */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-in-up {
        animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
        opacity: 0;
      }

      /* Property Card */
      .property-card {
        position: relative;
        display: block;
        background: white;
        border-radius: 1.5rem;
        border: 1px solid rgb(229, 231, 235);
        padding: 0.75rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .property-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        border-color: rgb(209, 213, 219);
      }

      /* Heart Button */
      .heart-button {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        width: 2.5rem;
        height: 2.5rem;
        display: flex;
        align-items: center;
        justify-center;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(8px);
        border-radius: 9999px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 10;
      }

      .heart-button:hover {
        transform: scale(1.1);
        background: rgb(239, 68, 68);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
      }

      .heart-button:hover svg {
        color: white;
      }

      .heart-button:active {
        transform: scale(0.95);
      }

      /* Quick Actions */
      .quick-actions {
        position: absolute;
        bottom: 1rem;
        left: 1rem;
        right: 1rem;
        display: flex;
        gap: 0.5rem;
        opacity: 0;
        transform: translateY(8px);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .property-card:hover .quick-actions {
        opacity: 1;
        transform: translateY(0);
      }

      .quick-action-btn {
        flex: 1;
        padding: 0.625rem 1rem;
        font-size: 0.875rem;
        font-weight: 600;
        text-align: center;
        border-radius: 0.75rem;
        backdrop-filter: blur(8px);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }

      .quick-action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
      }

      /* Filter Buttons */
      .filter-btn {
        padding: 0.625rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: rgb(55, 65, 81);
        background: white;
        border: 1.5px solid rgb(229, 231, 235);
        border-radius: 9999px;
        cursor: pointer;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        display: inline-flex;
        align-items: center;
        white-space: nowrap;
      }

      .filter-btn:hover {
        border-color: rgb(107, 114, 128);
        background: rgb(249, 250, 251);
        transform: translateY(-1px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.08);
      }

      .filter-btn.active {
        background: linear-gradient(to right, rgb(239, 68, 68), rgb(236, 72, 153));
        color: white;
        border-color: transparent;
        box-shadow: 0 4px 6px -1px rgba(239, 68, 68, 0.3);
      }

      .filter-btn:active {
        transform: scale(0.97);
      }

      /* Sort Select */
      .sort-select {
        appearance: none;
        padding: 0.625rem 3rem 0.625rem 1rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: rgb(55, 65, 81);
        background: white;
        border: 1.5px solid rgb(229, 231, 235);
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        width: 100%;
      }

      .sort-select:hover {
        border-color: rgb(107, 114, 128);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.08);
      }

      .sort-select:focus {
        outline: none;
        border-color: rgb(239, 68, 68);
        box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
      }

      /* View Details Button */
      .view-details-btn {
        display: block;
        width: 100%;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(to right, rgb(17, 24, 39), rgb(31, 41, 55));
        color: white;
        text-align: center;
        font-size: 0.875rem;
        font-weight: 600;
        border-radius: 0.75rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .view-details-btn:hover {
        background: linear-gradient(to right, rgb(31, 41, 55), rgb(55, 65, 81));
        transform: translateY(-1px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
      }

      .view-details-btn:active {
        transform: scale(0.98);
      }

      /* Line Clamp */
      .line-clamp-1 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        overflow: hidden;
      }

      /* Card Exit Animation */
      @keyframes cardExit {
        to {
          opacity: 0;
          transform: scale(0.9);
        }
      }

      .removing {
        animation: cardExit 0.3s cubic-bezier(0.4, 0, 1, 1) forwards;
      }

      /* Smooth Scrolling */
      html {
        scroll-behavior: smooth;
      }

      /* Font Smoothing */
      * {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
    </style>

    <script>
      // Remove from Favourites
      function removeFavourite(event, propertyId) {
        event.preventDefault();
        event.stopPropagation();
        
        const card = event.target.closest('.property-card');
        card.classList.add('removing');
        
        setTimeout(() => {
          fetch(`/favourites/remove/${propertyId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
          })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              card.remove();
              const grid = document.getElementById('propertiesGrid');
              if (grid && grid.children.length === 0) {
                location.reload();
              }
            }
          })
          .catch(err => console.error('Error:', err));
        }, 300);
      }

      // Filter Functions
      function filterAll() {
        const cards = document.querySelectorAll('.property-card');
        cards.forEach(card => card.style.display = 'block');
        updateActiveFilter(0);
      }

      function filterByPrice(type) {
        const cards = Array.from(document.querySelectorAll('.property-card'));
        const threshold = 5000;
        
        cards.forEach(card => {
          const price = parseInt(card.dataset.price);
          card.style.display = (type === 'low' && price <= threshold) || (type === 'high' && price > threshold) ? 'block' : 'none';
        });
        
        updateActiveFilter(type === 'low' ? 1 : 2);
      }

      function updateActiveFilter(index) {
        const buttons = document.querySelectorAll('.filter-btn');
        buttons.forEach((btn, i) => btn.classList.toggle('active', i === index));
      }

      // Sort Properties
      function sortProperties(sortType) {
        const grid = document.getElementById('propertiesGrid');
        if (!grid) return;
        
        const cards = Array.from(grid.children);
        
        cards.sort((a, b) => {
          switch(sortType) {
            case 'price-low':
              return parseInt(a.dataset.price) - parseInt(b.dataset.price);
            case 'price-high':
              return parseInt(b.dataset.price) - parseInt(a.dataset.price);
            case 'name':
              return a.dataset.name.localeCompare(b.dataset.name);
            default:
              return 0;
          }
        });
        
        cards.forEach(card => grid.appendChild(card));
      }
    </script>

