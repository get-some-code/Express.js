<%- include('../partials/head') %>
  </head>

  <body class="min-h-screen bg-gradient-to-br from-rose-50 via-white to-pink-50 text-gray-800 antialiased">

    <!-- HEADER -->
    <%- include('../partials/nav') %>

    <!-- MAIN -->
    <main class="w-full py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <% 
          const favourites = favouriteProperties || [];
        %>
        
        <!-- Hero Section -->
        <div class="mb-12 text-center fade-in-up">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900 mb-3">
            Your Favourites
          </h1>
          
          <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed">
            All the places you've fallen in love with, saved in one beautiful collection
          </p>
        </div>

        <!-- Stats Bar -->
        <div class="mb-10 fade-in-up" style="animation-delay: 0.1s">
          <div class="bg-white/90 backdrop-blur-lg rounded-2xl border border-gray-200/80 shadow-lg hover:shadow-xl transition-shadow duration-300 p-6">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
              
              <!-- Saved Properties -->
              <div class="flex items-center gap-4 p-4 rounded-xl hover:bg-gradient-to-br hover:from-red-50 hover:to-pink-50 transition-all duration-300 group">
                <div class="w-14 h-14 bg-gradient-to-br from-red-100 to-pink-100 rounded-xl flex items-center justify-center group-hover:scale-110 group-hover:shadow-lg transition-all duration-300">
                  <svg class="w-7 h-7 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <p class="text-3xl font-bold text-gray-900 mb-0.5"><%= favourites.length %></p>
                  <p class="text-sm text-gray-600 font-medium">Saved Properties</p>
                </div>
              </div>

              <!-- Locations -->
              <div class="flex items-center gap-4 p-4 rounded-xl hover:bg-gradient-to-br hover:from-blue-50 hover:to-cyan-50 transition-all duration-300 group">
                <div class="w-14 h-14 bg-gradient-to-br from-blue-100 to-cyan-100 rounded-xl flex items-center justify-center group-hover:scale-110 group-hover:shadow-lg transition-all duration-300">
                  <svg class="w-7 h-7 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-3xl font-bold text-gray-900 mb-0.5"><%= new Set(favourites.map(p => p.propertyLocation)).size %></p>
