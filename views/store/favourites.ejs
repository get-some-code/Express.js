                  <img src="/uploads/<%= property.propertyPhoto %>" 
                       alt="<%= property.propertyName %>" 
                       class="w-full h-full object-cover transform transition-transform duration-500 ease-out group-hover:scale-110" />
                  
                  <!-- Overlay on Hover -->
                  <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  <!-- Favourite Badge -->
                  <div class="absolute top-3 left-3 px-3 py-1.5 bg-gradient-to-r from-yellow-400 to-orange-400 text-white text-xs font-bold rounded-full shadow-md backdrop-blur-sm flex items-center justify-center gap-1.5">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                    </svg>
                    <span>Favourite</span>
                  </div>

                  <!-- Remove Button -->
