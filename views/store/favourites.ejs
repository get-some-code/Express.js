            <a href="/" 
               class="inline-flex items-center gap-2.5 px-8 py-3.5 bg-gradient-to-r from-red-500 to-pink-500 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl hover:scale-105 active:scale-95 transition-all duration-300">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              Explore Properties
            </a>
          </div>
        <% } %>

        <!-- Pro Tips -->
        <% if (favourites.length > 0) { %>
          <div class="mt-8 bg-gradient-to-br from-red-50/80 via-pink-50/80 to-rose-50/80 backdrop-blur-sm rounded-2xl border border-red-100 p-8 fade-in-up" style="animation-delay: <%= 0.3 + (favourites.length * 0.05) + 0.1 %>s">
            <div class="flex flex-col sm:flex-row items-start gap-6">
              <div class="flex-1">
