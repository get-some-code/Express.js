<%- include('../partials/head') %>
  </head>

  <body
    class="min-h-screen bg-linear-to-r from-gray-50 via-white to-gray-100 text-gray-800 antialiased flex flex-col items-center">

    <!-- HEADER -->
    <%- include('../partials/nav') %>

      <!-- MAIN -->
      <main class="flex-1 w-full flex flex-col items-center text-center mt-15 mb-40">
        <section class="max-w-3xl px-6">

          <h1 class="text-5xl font-bold tracking-tight text-gray-900">
            Welcome to <span class="text-red-500">Airbnb</span>
          </h1>

          <p class="mt-6 mx-auto max-w-2xl text-lg text-gray-600 leading-relaxed">
            Discover unique stays, unforgettable experiences, and places that feel like home—anywhere in the world.
          </p>

          <a href="/host/add-home"
            class="inline-flex items-center justify-center mt-8 rounded-full bg-linear-to-r from-red-500 to-pink-500 px-8 py-3 text-sm font-semibold text-white shadow-md transition hover:shadow-lg hover:scale-105 active:scale-95 focus:outline-none focus:ring-4 focus:ring-red-300">
            Become a host
          </a>

        </section>

        <p
          class="mt-10 mx-auto max-w-2xl text-center text-base font-medium tracking-tight text-gray-600 leading-relaxed">
          Here are our registered properties
        </p>
        <ul class="mt-12 w-full max-w-6xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 px-6">
          <% registeredProperty.forEach(property=> { %>
            <li
              class="group relative overflow-hidden rounded-3xl border border-gray-200 bg-white shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
              <!-- Image Wrapper -->
              <div class="relative h-48 w-full overflow-hidden rounded-2xl">
                <img src="/uploads/<%= property.propertyPhoto %>" alt="Property image"
                  class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" />

                <div
                  class="pointer-events-none absolute inset-0 bg-linear-to-t from-black/20 via-transparent to-transparent">
                </div>

                <!-- Favorite Button - Top Right -->
                <button onclick="toggleFavorite(this, '<%= property._id %>')"
                  class="absolute top-3 right-3 z-10 flex h-10 w-10 items-center justify-center rounded-full bg-white/90 backdrop-blur-sm shadow-md transition-all duration-300 hover:bg-white hover:scale-110 active:scale-95"
                  aria-label="Add to favorites">
                  <!-- Heart Icon -->
                  <svg 
                    class="heart-icon h-5 w-5 transition-colors duration-300 <%= favourites && favourites.includes(property._id) ? 'favorited text-red-500' : 'text-gray-600' %>" 
                    fill="currentColor"
                    stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>

                </button>
              </div>

              <!-- Card Body -->
              <div class="p-5">
                <!-- Property Name -->
                <h3
                  class="text-lg font-semibold tracking-tight text-gray-900 transition-colors duration-200 group-hover:text-red-500">
                  <%= property.propertyName %>
                </h3>

                <!-- Location -->
                <p class="mt-1 text-sm text-gray-500">
                  <%= property.propertyLocation %>
                </p>

                <!-- Price -->
                <p class="mt-3 text-base font-medium text-gray-900">
                  ₹<%= property.pricePerNight %>
                    <span class="text-sm font-normal text-gray-500">/ night</span>
                </p>

                <!-- Divider -->
                <div class="my-2 h-px w-full bg-gray-100"></div>

                <!-- Meta -->
                <p class="mb-4 text-xs font-medium uppercase tracking-wide text-gray-400">
                  Hosted on Airbnb
                </p>

                <!-- Action Buttons -->
                <div class="flex gap-3">
                  <a href="/booking/<%= property._id %>"
                    class="flex-1 rounded-xl bg-linear-to-r from-red-500 to-pink-500 px-4 py-2.5 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:shadow-lg hover:scale-105 active:scale-95 hover:from-red-600 hover:to-pink-600 text-center inline-block">
                    Book Now
                  </a>
                  
                  <a href="/property/<%= property._id %>"
                    class="flex-1 rounded-xl border-2 border-gray-200 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 transition-all duration-300 hover:border-gray-300 hover:bg-gray-50 hover:scale-105 active:scale-95 text-center inline-block">
                    Details
                  </a>
                </div>
              </div>
            </li>
            <% }) %>
        </ul>

      </main>

      <!-- Styling and JavaScript -->
      <%- include('../partials/homeControls') %>

      <!-- FOOTER -->
      <%- include('../partials/footer') %>

  </body>
  </html>